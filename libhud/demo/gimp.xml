<actions gettext-domain='gimp'>
  <action name="app.quit">
    <attribute name="label" translatable="yes">Quit</attribute>
    <attribute name="keywords" translatable="yes">quit, close, exit</attribute>
  </action>

  <action name="win.blur">
    <attribute name="label" translatable="yes">Blur</attribute>
    <attribute name="keywords" translatable="yes">blur, fuzz, gaussian</attribute>
    <operation>
      <widget type='slider' action='op.radius'>
        <label translatable="yes">Radius</label>
        <range min='0.0' max='100.0'/>
      </widget>

      <widget type='toggle' action='op.gaussian'>
        <label translatable="yes">Gaussian</label>
      </widget>

      <widget type='button' action='op.apply'>
        <label translatable="yes">Apply</label>
      </widget>
    </operation>
  </action>

  <action name="win.colourify">
    <attribute name="label" translatable="yes">Colourify</attribute>
    <attribute name="keywords" translatable="yes">colourify, tint, sepia</attribute>
    <operation>
      <widget type='slider' action='op.red'>
        <label translatable="yes">Red</label>
        <range min='0' max='255'/>
      </widget>

      <widget type='slider' action='op.green'>
        <label translatable="yes">Green</label>
        <range min='0' max='255'/>
      </widget>

      <widget type='slider' action='op.blue'>
        <label translatable="yes">Blue</label>
        <range min='0' max='255'/>
      </widget>

      <widget type='button' action='op.apply'>
        <label translatable="yes">Apply</label>
      </widget>
    </operation>
  </action>
</actions>
